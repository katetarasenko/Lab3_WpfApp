<Window x:Class="Lab3_WpfApp.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3_WpfApp"
        mc:Ignorable="d"
        Title="LoginForm" Height="300" Width="400">
    <Grid>
        <TextBox x:Name="tbname" HorizontalAlignment="Left" Height="30" Margin="156,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="155"/>
        <Label Content="username" HorizontalAlignment="Left" Height="30" Margin="27,38,0,0" VerticalAlignment="Top" Width="98"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="43" Margin="27,99,0,0" VerticalAlignment="Top" Width="98"/>
        <TextBox x:Name="tbpassw" HorizontalAlignment="Left" Height="43" Margin="156,99,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="155"/>
        <Button Content="Sign in" HorizontalAlignment="Left" Height="54" Margin="43,200,0,0" VerticalAlignment="Top" Width="116" Click="SignIn_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="54" Margin="234,200,0,0" VerticalAlignment="Top" Width="124" Click="Exit_Click"/>
    </Grid>
</Window>
